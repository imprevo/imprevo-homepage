{
  "name": "imprevo-homepage",
  "description": "Frontside Varial Kickflip Developer",
  "version": "1.0.0",
  "author": "Evgeniy Mokeev",
  "keywords": [
    "eleventy",
    "homepage"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imprevo/imprevo.github.io"
  },
  "scripts": {
    "build": "eleventy",
    "develop": "eleventy --serve",
    "deploy": "eleventy && gh-pages -d dist -b master",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-brands-svg-icons": "^5.14.0",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "eleventy-plugin-sass": "^1.1.1",
    "node-sass": "^4.14.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{scss}": "prettier --write",
    "*.{html,json}": "prettier --write",
    "*.{svg}": "prettier --parser html --write"
  }
}
